    <part Name="UD_DropBits" />
    <part Name="UD_VendorTinkering" />
    <tag Name="AnimatedSkills" Value="UD_Basics" />
    <property Name="AnimatedSkills" Value="UD_Basics" />
  </object>
  
  <object Name="Creature" Load="Merge">
    <skill Name="UD_Basics" />
  </object>
  
